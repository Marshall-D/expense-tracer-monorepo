{
  "name": "expense-tracker-monorepo",
  "private": true,
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "concurrently": "^8.0.0"
  },
  "scripts": {
    "build:client": "pnpm --filter client run build",
    "build:server": "pnpm --filter server run build",
    "build": "pnpm run build:client && pnpm run build:server",
    "build:all": "pnpm run build",
    "dev": "concurrently \"pnpm --filter server dev\" \"pnpm --filter client dev\"",
    "dev:all": "pnpm run dev",
    "typecheck": "pnpm -w -r run typecheck",
    "lint": "pnpm -w -r run lint",
    "check:env": "node ./scripts/check-env.js",
    "bootstrap": "pnpm install",
    "deploy:server": "bash packages/server/src/scripts/deploy-live.sh",
    "ci:build": "pnpm install --frozen-lockfile && pnpm run check:env && pnpm run build"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "react-hot-toast": "^2.6.0",
    "tailwind-merge": "^3.4.0"
  }
}
